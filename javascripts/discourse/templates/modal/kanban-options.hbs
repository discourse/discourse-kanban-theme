{{#d-modal-body class="kanban-modal" title=(theme-prefix "modal.title")}}
  <div class="controls">
    {{combo-box
      content=modes
      value=mode
      onChange=(action (mut mode))
      valueProperty="id"
      nameProperty="id"
    }}
  </div>

  <div class="controls">
    {{#if isTags}}
      {{tag-chooser
        tags=tags
        allowCreate=false
        filterPlaceholder=(theme-prefix "modal.tags_placeholder")
        everyTag=true
      }}
    {{else if isCategories}}
      {{multi-select
        content=site.categories
        value=categories
        filterPlaceholder=(theme-prefix "modal.categories_placeholder")
      }}
    {{else if isAssigned}}
      {{email-group-user-chooser
        value=usernames
        onChange=(action (mut usernames))
        options=(hash
          fullWidthWrap=true
          filterPlaceholder=(theme-prefix "modal.usernames_placeholder")
        )
      }}
    {{/if}}
  </div>
{{/d-modal-body}}

<div class="modal-footer">
  {{d-button
    class="btn-primary"
    action=(action "apply")
    label=(theme-prefix "modal.apply")
  }}
</div>